include pug/mixins

block vars
	-
		let baseDir = './';
		const jsv = 'javascript:void(0)';

		baseDir = 'https://raw.githubusercontent.com/alskra/rhesus-factor-emails/master/src/';

	-
		const fontFamilyProximaNova = '"Proxima Nova", Arial, sans-serif';

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
html
	head
	body
		+table()(width="100%")
			tr
				+td()(
					align="center"
				)
					+table()(
						width="100%"
						align="center"
						style={
							width: '100%',
							'max-width': '460px'
						}
					)
						// Main
						tr
							+td()(
								height="611"
								style={
									'background-image': `url(${baseDir}images/christmas-bg.jpg)`,
									'background-repeat': 'no-repeat',
									'background-size': 'cover'
								}
							)
								+table()(
									width="100%"
								)
									tr
										+td()(
											align="center"
											style={
												padding: '57px 40px'
											}
										)
											+a({
												'display': 'inline',
												'text-decoration': 'none'
											})
												+img({
													'display': 'inline',
												})(
													src=`${baseDir}images/logo.png`
													width="212"
													height="53"
												)

									tr
										+td()
											| Content

						// Footer
						tr
							+td()(
								style={
									padding: '23px 40px',
									'background-color': '#3485D6'
								}
							)
								+table()(width="100%")
									tr
										+td()(align="center")
											+table()
												tr
													+td()(
														valign="middle"
														style={
															'padding-right': '5px'
														}
													)
														+img()(
															src=`${baseDir}images/copyright.png`
															width="9"
															height="9"
														)

													+td()(valign="middle")
														+span({
															color: '#ffffff',
															font: `16px ${fontFamilyProximaNova}`
														})
															| Резус-Фактор Company, 2020

									tr
										+td()(
											align="center"
											style={
												'padding': '19px 0'
											}
										)
											+table()
												tr
													+td()
														+table()
															tr
																+td()(
																	valign="middle"
																	style={
																		'padding-right': '8px'
																	}
																)
																	+img()(
																		src=`${baseDir}images/world.png`
																		width="24"
																		height="24"
																	)

																+td()(valign="middle")
																	+a({
																		color: '#ffffff',
																		font: `16px ${fontFamilyProximaNova}`,
																		'text-decoration': 'none'
																	})(href="//lab62.ru")
																		| lab62.ru

													+td()(
														style={
															'padding-left': '45px'
														}
													)
														+table()
															tr
																+td()(
																	valign="middle"
																	style={
																		'padding-right': '8px'
																	}
																)
																	+img()(
																		src=`${baseDir}images/phone.png`
																		width="24"
																		height="24"
																	)

																+td()(valign="middle")
																	+a({
																		color: '#ffffff',
																		font: `16px ${fontFamilyProximaNova}`,
																		'text-decoration': 'none'
																	})(href="tel:+74912466335")
																		| +7 (4912) 46-63-35

									tr
										+td()(align="center")
											+span({
												color: '#ffffff',
												font: `14px ${fontFamilyProximaNova}`,
												'line-height': '17px'
											})
												| Вы&nbsp;можете отказаться от&nbsp;получения писем, перейдя

												+a({
													color: '#ffffff',
													font: `14px ${fontFamilyProximaNova}`,
													'line-height': '17px',
													'text-decoration': 'underline'
												})
													b по&nbsp;этой ссылке
